<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itm.grouper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.itm.grouper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.GroupsActivity"
            android:label="@string/title_activity_groups" >
            <intent-filter>
                <action android:name="com.itm.grouper.GroupsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.AddGroup"
            android:label="@string/title_activity_add_group"
            android:parentActivityName="com.itm.grouper.GroupsActivity" >
            <intent-filter>
                <action android:name="com.itm.grouper.AddGroup" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.RenameGroup"
            android:label="@string/title_activity_rename_group" >
            <intent-filter>
                <action android:name="com.itm.grouper.RenameGroup" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.ContactsActivity"
            android:label="@string/title_activity_contacts" >
            <intent-filter>
                <action android:name="com.itm.grouper.ContactsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.AddContact"
            android:label="@string/title_activity_add_contact" >
            <intent-filter>
                <action android:name="com.itm.grouper.AddContact" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.EditContact"
            android:label="@string/title_activity_edit_contact" >
            <intent-filter>
                <action android:name="com.itm.grouper.EditContact" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itm.grouper.TemplateActivity"
            android:label="@string/title_activity_template" >
            <intent-filter>
                <action android:name="com.itm.grouper.TemplateActivity"/>
                
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>